{
  "name": "libbitcoin-server",
  "version": "4.0.0",
  "description": "A web interface for libbitcoin server",
  "main": "web/index.js",
  "scripts": {
    "dev": "webpack-dev-server --mode development --content-base ./web/build --config web/webpack.config.js",
    "watch": "webpack -d --mode development --watch --config web/webpack.config.js",
    "build": "webpack -p --mode production --config web/webpack.config.js",
    "build:client": "webpack -p --mode production --config web/webpack.client.config.js",
    "test": "ospec"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/libbitcoin/libbitcoin-server.git"
  },
  "license": "LGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/libbitcoin/libbitcoin-server/issues"
  },
  "homepage": "https://github.com/libbitcoin/libbitcoin-server#readme",
  "dependencies": {
    "big.js": "^5.2.2",
    "mithril": "^1.1.6"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.0.5",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "bootstrap-loader": "^3.0.2",
    "bootstrap-sass": "^3.4.0",
    "css-loader": "^2.1.0",
    "exports-loader": "^0.7.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^3.0.1",
    "fs-extra": "^7.0.1",
    "html-loader": "^0.5.5",
    "html-webpack-inline-source-plugin": "0.0.10",
    "html-webpack-plugin": "^3.2.0",
    "imports-loader": "^0.8.0",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.11.0",
    "postcss-loader": "^3.0.0",
    "resolve-url-loader": "^3.0.0",
    "sass-loader": "^7.1.0",
    "static-loader": "^0.1.8",
    "style-loader": "^0.23.1",
    "svg-inline-loader": "^0.8.0",
    "svg-url-loader": "^2.3.2",
    "url-loader": "^1.1.2",
    "webpack": "^4.28.3",
    "webpack-cli": "^3.2.0",
    "webpack-dev-server": "^3.1.14"
  },
  "babel": {
    "presets": [
      "@babel/env"
    ],
    "plugins": [
      [
        "transform-react-jsx",
        {
          "pragma": "m"
        }
      ]
    ]
  }
}
